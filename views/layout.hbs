<!DOCTYPE html>
<html lang="en" class="fuelux">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <meta name="author" content="ExactTarget">
        <title>{{title}}</title>
        <script src="/js/libs/require.js"></script>
        <script>
            require(["/js/app/main.js"], function(main) {
            	
            });
        </script>
        
        <link rel="stylesheet" href="/css/reset.css"/>
        <link rel="stylesheet" href="/css/framework.css"/>
        <link rel="stylesheet" href="/css/style.css"/>
        <link rel="stylesheet" href="/css/lte_ie9.css"/>
        <link rel="stylesheet" href="/css/anim.css"/>
        <link rel="stylesheet" href="/css/anim-webkit.css"/>
    </head>
    <body>
        
        <div id="pages">
            <div id="main">
                <h1>IMPROV DATABASE</h1>
                <nav id="topnav">
                    <div id="searchBox" class="pod">
                        <input name="search" placeholder="Search" />
                    </div>
                    <div id="filterBox" class="pod"></div>
                    <div id="gameBox" class="pod">
                        <div id="btnAddGame" class="btn has-tooltip" title="Add Game">
                            <span class="off">&#43</span>
                            <span class="on">&#8722;</span>
                        </div>
                        <div class="content"></div>
                    </div>
                </nav>
                <div id="gameTable" class="pod"></div>
                <nav id="bottomnav">
                    <div id="pagesize" data-menu="pagesize_dropdown" class="pod dropdown-button btn"><span class="value">Fit Page</span> <span class="arrow-up pull-right"></span></div>
                    <div class="dropdown up shadow4" id="pagesize_dropdown">
                        <a href="#" class="dropdown-option btn" data-value="10">10 Games</a>
                        <a href="#" class="dropdown-option btn" data-value="25">25 Games</a>
                        <a href="#" class="dropdown-option btn" data-value="50">50 Games</a>
                        <a href="#" class="dropdown-option btn" data-value="0">Show All</a>
                        <a href="#" class="dropdown-option btn" data-value="auto">Fit Page</a>
                    </div>

                    <div id="paging" class="pod">
                        <div id="prevpage" class="btn">&lt;</div>
                        <div id="pageindicator"><div></div></div>
                        <div id="nextpage" class="btn">&gt;</div>
                    </div>
                    <!--
                    <div id="paging">
                        <div id="prevpage" class="pod btn">&lt;</div>
                        <div id="pageindicator" class="pod"></div>
                        <div id="nextpage" class="pod btn">&gt;</div>
                    </div>
                    -->
                </nav>
            </div>
        </div>

        <script>
            var database = {{{data}}};
        </script>
    </body>
</html>
